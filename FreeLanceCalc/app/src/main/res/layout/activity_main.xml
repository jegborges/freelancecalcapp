<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/abc_control_padding_material"
    android:paddingLeft="@dimen/abc_control_padding_material"
    android:paddingRight="@dimen/abc_control_padding_material"
    android:paddingTop="@dimen/abc_control_padding_material"
    tools:context="studioborges.freecalc2.MainActivity"
    android:background="@color/primary_material_light">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView1"
            android:src="@drawable/ic_logo_portada_verde_freelancecalc"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:text="Calc "
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:paddingLeft="@dimen/abc_dialog_padding_top_material"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="FreeLance"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageview2"
        android:src="@drawable/ic_logo_portada_verde_freelancecalc"
        android:contextClickable="false"
        android:paddingTop="10dp"
        android:contentDescription="Logo FreelanceCalc"
        android:scaleType="fitStart"
        android:layout_alignLeft="@+id/textview4"
        android:layout_alignStart="@+id/textview4"
        android:layout_below="@+id/my_toolbar"
        android:maxHeight="@dimen/abc_dialog_padding_material"
        android:background="@color/primary_material_light"
        android:paddingLeft="55dp"
        android:layout_alignRight="@+id/textview4"
        android:layout_alignEnd="@+id/textview4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview4"
        android:textColor="@android:color/holo_green_light"
        android:visibility="visible"
        android:width="@dimen/abc_panel_menu_list_width"
        android:height="@dimen/notification_large_icon_height"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:text="Calc FreeLance"
        android:background="@color/primary_material_light"
        android:textStyle="bold"
        android:layout_below="@+id/imageview2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Calculadora para el precio por hora en profesionistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:id="@+id/textview5"
        android:textColor="#0000ff"
        android:visibility="visible"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:background="@color/primary_material_light"
        android:textStyle="bold"
        android:layout_below="@+id/textview4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:onClick="Time"
        android:id="@+id/button"
        android:width="400dp"
        android:height="50dp"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textAlignment="center"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/textview4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:autoLink="web"
        android:id="@+id/textview7"
        android:textColor="#0000ff"
        android:visibility="visible"
        android:width="400dp"
        android:height="60dp"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:singleLine="false"
        android:linksClickable="true"
        android:background="@color/primary_material_light"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
